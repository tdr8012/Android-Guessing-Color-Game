<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Username -->
        <TextView
            android:id="@+id/txtViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginBottom="10dp" />

        <!-- Instruction -->
        <TextView
            android:id="@+id/txtViewInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match the color within 5 seconds!"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/txtViewColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLOR"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/txtViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time left: 5s"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnRed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RED"
                android:backgroundTint="#FF0000"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GREEN"
                android:backgroundTint="#00FF00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BLUE"
                android:backgroundTint="#0000FF"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="YELLOW"
                android:backgroundTint="#FFFF00"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Score -->
        <TextView
            android:id="@+id/txtViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnReturn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Main Page"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>
